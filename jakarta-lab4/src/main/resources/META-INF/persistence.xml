<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="foodPU" transaction-type="JTA">
    <jta-data-source>jdbc/foodDS</jta-data-source>
    <class>com.example.lab4.entity.Menu</class>
    <class>com.example.lab4.entity.MenuItem</class>
    <class>com.example.lab4.entity.Order</class>
    <class>com.example.lab4.entity.OrderItem</class>
    <properties>
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="eclipselink.logging.level" value="FINE"/>
    </properties>
  </persistence-unit>
</persistence>
